# =============================================================================
# PyService Mini-ITSM Platform - Docker Environment Configuration
# Copy this file to .env.docker and configure your settings
# =============================================================================

# Django Settings
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,pyservice.local

# Database Configuration (MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=pyservice_db
DB_USER=pyservice
DB_PASSWORD=pyservice_secret
DB_HOST=mysql
DB_PORT=3306
MYSQL_ROOT_PASSWORD=root_secret

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@pyservice.local

# Elasticsearch (Optional)
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Django Superuser (Created on first run)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@pyservice.local
DJANGO_SUPERUSER_PASSWORD=admin123

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CSRF_TRUSTED_ORIGINS=http://localhost,http://pyservice.local
